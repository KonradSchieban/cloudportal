{% extends "base.njk" %}

{% block body %}

<div class="container">
    <div class="row">
        <h1>Create a new offering.</h1>

        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">Name:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="Enter name" name="name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="display_name">Display Name:</label>
                <div class="col-sm-10"> 
                <input type="text" class="form-control" id="display_name" placeholder="Enter Display Name" name="display_name">
                </div>
            </div>
            <div class="form-group"> 
                <label class="control-label col-sm-2" for="description">Description:</label>
                <div class="col-sm-10"> 
                <input type="text" class="form-control" id="descritpion" placeholder="Enter Description" name="description">
                </div>
            </div>
            <div class="form-group"> 
                <label class="control-label col-sm-2" for="image">Image URL:</label>
                <div class="col-sm-10"> 
                <input type="text" class="form-control" id="image" placeholder="Enter Image URL" name="image">
                </div>
            </div>
            <div class="form-group"> 
                <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Create</button>
                </div>
            </div>
        </form>

    </div>
</div>


{% endblock %}